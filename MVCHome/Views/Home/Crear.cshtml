@model MVCHome.Models.Usuario
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "_LayoutDashboard";
}

@*<h1><a></a>@ViewData["Title"]</h1>*@
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">
                    <strong>Nuevo usuario</strong>
                </h1>
            </div>
            <div class="card-body">
                <form asp-action="CrearUsuario" method="post">
                    <div class="form-group">
                        <label asp-for="Nombre">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="User">Usuario</label>
                        <input asp-for="User" class="form-control" placeholder="Ingrese su usuario" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Contraseña</label>
                        <input asp-for="Password" class="form-control" placeholder="Ingrese una contraseña" required/>
                    </div>
                    <div class="container-fluid">
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fa-solid fa-plus"></i> Crear
                        </button>
                    </div>
                </form>
                <br/>
                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-arrow-rotate-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>