@model IEnumerable<MVCHome.Models.Articulo>
@{
    ViewData["Title"] = "Articulo Page";
    Layout = "_LayoutDashboard";
}

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Articulo" class="btn-success d-block mx=auto btn-lg">
            <i class="fa-solid fa-plus"></i> Nuevo articulo
        </a>
    </div>
</div>
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">
                    <strong>Lista de articulos</strong>
                </h1>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        //Cabecera de la tabla
                        <table class="table table-bordered align-middle" id="tblUsuarios"
                           width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => x.PkArticulo)</th>
                                    <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                                    <th>@Html.DisplayNameFor(x => x.Descripcion)</th>
                                    <th>@Html.DisplayNameFor(x => x.UrlImg)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x => item.PkArticulo)</td>
                                        <td>@Html.DisplayFor(x => item.Nombre)</td>
                                        <td>@Html.DisplayFor(x => item.Descripcion)</td>
                                        <td style="text-align:center"><img style="width:35%" src="@Html.DisplayFor(x => item.UrlImg)" alt=""></td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.PkArticulo">
                                                <i class="fa-solid fa-pen-to-square"></i> Editar
                                            </a>
                                            <br>
                                            <br>
                                            <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.PkArticulo">
                                                <i class="fa-solid fa-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#tblUsuarios').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando START a END de TOTAL Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de MAX total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}